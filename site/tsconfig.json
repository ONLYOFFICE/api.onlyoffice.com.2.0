{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["./*"]
    },
    "rootDir": ".",
    "outDir": "./dist",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment"
  },
  "include": [
    "../index.d.ts",
    "./config/**/*",
    "./resources/**/*",
    "./src/**/*"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "./src/**/fixtures/*"
  ]
}
