{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["./*"]
    },
    "rootDir": ".",
    "outDir": "./dist",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment"
  },
  "include": [
    "../index.d.ts",
    "./components",
    "./config",
    "./layouts",
    "./pages",
    "./resources",
    "./types/*.d.ts",
    "./main.ts"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "./**/fixtures"
  ]
}
